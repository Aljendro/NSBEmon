  <%= form_tag({controller: "nsbemon", action: "add_amounts"}, method: "patch" ) do %>
    
    <div class="row"> 
      <div class="col-lg-12">
        <h1> NSBEmon Training </h1>
      </div>
    </div> 

    <div class="row">
      <div class="col-lg-12">
        <%= check_box_tag 'accept', '1' %>
