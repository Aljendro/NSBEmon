<%= form_for(@profile, url: user_profile_path(@profile), html: { method: :put}) do |f| %>

  <%= f.label :first_name %>
  <%= f.text_field :first_name %><br>

  <%= f.label :last_name %>
  <%= f.text_field :last_name %><br>

  <%= f.label :trainer_name %>
  <%= f.text_field :trainer_name %><br>

  <%= f.label :gpa %><br>
  <%= f.number_field :gpa, :step => 0.01, :max => 4.00, :min => 0.00 %><br><br>

  <%= f.label :graduation_year %><br>
  <%= f.select :graduation_year, 
    options_for_select(['2015', 
    '2016',
    '2017', 
    '2018', 
    '2019',
    '2020', 
    '2021'])
    %>
    <br>
    <br>

  <%= f.label :major %><br>
  <%= f.select :major, options_for_select(['Computer Science', 
    'Electrical Engineering',
    'Mechanical Engineering', 
    'Chemical Engineering', 
    'Biomedical Engineering',
    'Civil Engineering', 
    'Aerospace Engineering',
    'Other']) %> 
    <br>
    <br>


  <%= f.submit "Submit", class: 'btn btn-primary' %>
<% end %>